{
  "name": "tidyscript",
  "version": "1.0.0",
  "description": "A CLI tool that analyses your code based on function length and indentation depth, checking for basic impediments to readability.",
  "bin": {
    "tidyscript": "./dist/bin/main.js"
  },
  "scripts": {
    "setup": "npm install",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "pretest": "npm run build",
    "test-only": "mocha -r ts-node/register src/test/**/*.ts",
    "test": "nyc --reporter=lcov npm run test-only",
    "posttest": "nyc report",
    "start": "npm run build && node ./dist/main/index.js"
  },
  "author": "",
  "license": "ISC",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielbarker/TidyScript.git"
  },
  "directories": {
    "bin": "./bin/",
    "lib": "./dist/main/"
  },
  "files": [
    "dist/bin",
    "dist/main"
  ],
  "keywords": [
    "analytics",
    "clean",
    "cli",
    "code",
    "helper",
    "javascript",
    "terminal",
    "typescript"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.4",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "glob": "^7.1.6",
    "minimist": ">=1.2.3",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "ts-node": "^8.6.2",
    "typemoq": "^2.1.0",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.2",
    "js-yaml": "^3.13.1",
    "taybl": "0.0.2"
  }
}
